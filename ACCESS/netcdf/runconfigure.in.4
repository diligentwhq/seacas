#! /bin/sh
rm -f config.cache
LIBRARYSUBDIR=lib; export LIBRARYSUBDIR
CC='$(CC)'; export CC
CFLAGS='-I../libsrc $(CFLAGS) $(PICFLAGS)'; export CFLAGS
CXX='$(CXX)'; export CXX
CXXFLAGS='-I../libsrc $(CXXFLAGS) $(PICFLAGS)'; export CXXFLAGS
CPPFLAGS='-DNDEBUG'; export CPPFLAGS
ARFLAGS='$(ARFLAGS)'; export ARFLAGS

### SEACAS does not use the Fortran or F90 versions of netcdf library
FC=''; export FC
F90=''; export F90
 
./configure --disable-f77 --disable-f90 --disable-shared $1
