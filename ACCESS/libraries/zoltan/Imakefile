INCLIST = zoltan_align.h zoltan_comm.h zoltan_cpp.h zoltan_dd.h zoltan.h zoltan_mem.h zoltan_types.h zoltan_eval.h

#if defined(CatamountArchitecture) || defined(CrossCatamountArchitecture)
Utilities/Config/Config.SEACAS: Utilities/Config/Config.SEACAS.catamount Imakefile $(CONFIGDIR)/$(MACROFILE)
	$(ETCDIR)/MsubCmd +R"@" -R"@" Utilities/Config/Config.SEACAS.catamount > Utilities/Config/Config.SEACAS
#else
Utilities/Config/Config.SEACAS: Utilities/Config/Config.SEACAS.in Imakefile $(CONFIGDIR)/$(MACROFILE)
	$(ETCDIR)/MsubCmd +R"@" -R"@" Utilities/Config/Config.SEACAS.in > Utilities/Config/Config.SEACAS
#endif

all:: Obj_SEACAS/libzoltan.a 

Obj_SEACAS/libzoltan.a: Utilities/Config/Config.SEACAS
	$(MAKE) -f Makefile.zoltan ZOLTAN_ARCH=SEACAS CFLAGS='$(CFLAGS)' zoltan

clean:: Utilities/Config/Config.SEACAS
	$(MAKE) -f Makefile.zoltan ZOLTAN_ARCH=SEACAS clean

InstallSubdirIncludeList(makeincludes,include,$(INCLIST),$(INCDIR))
InstallRenamedLibrary(install,Obj_SEACAS/libzoltan.a,libzoltan.a,$(LIBDIR))

install:: makeincludes
