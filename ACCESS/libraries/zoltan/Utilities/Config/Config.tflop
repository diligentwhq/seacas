##############################################################################
#  Environment variables for compiling the Zoltan and test drivers for
#  ASCI Red on Sandia's 980 LAN.
#  For explanations of these variables, please see Config.generic.
##############################################################################

DEFS 			= -DTFLOP

RANLIB			= ranlib
AR			= ar r

CC			= pgcc -cougar
INCLUDE_PATH		=
DBG_FLAGS		= -g
OPT_FLAGS		= -O3 -Minfo=all
CFLAGS 			= $(OPT_FLAGS)

F90			= pgf90 -cougar
LOCAL_F90		= f90
F90CFLAGS 		= -DFMANGLE=UNDERSCORE -DPGI -DNO_MPI2
FFLAGS    		=
SPPR_HEAD 		= spprinc.most
F90_MODULE_PREFIX 	= -I
FARG      		= farg_typical

MPI_LIB			= -lmpi
MPI_LIBPATH		= 

#PARMETIS_LIBPATH 	= -L/Net/usr/home/kddevin/ParMETIS
#PARMETIS_INCPATH 	= -I/Net/usr/home/kddevin/ParMETIS

# Jostle is currently not available for ASCI Red.
#JOSTLE_LIBPATH 	= -L/Net/local/proj/zoltan/arch/tflop/lib
#JOSTLE_INCPATH 	= -I/Net/local/proj/zoltan/arch/all/src
#JOSTLE_SRCPATH 	= /Net/local/proj/zoltan/arch/all/src

NEMESIS_LIBPATH		= -L/Net/projects/seacas/janus/current/lib
NEMESIS_INCPATH		= -I/Net/projects/seacas/janus/current/inc
 

